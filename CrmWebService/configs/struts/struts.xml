<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml" />
	<package name="lisenterManager" extends="struts-default">
		<global-results>
			<result name="otherError">
				/common/error.jsp
	        </result>
			<result name="ourError">
				/common/ourError.jsp        
	        </result>	        
		</global-results>
		<!-- 全局的异常配置 -->
		<global-exception-mappings>
		    <exception-mapping result="ourError" exception="com.linkage.bss.commons.exception.BssRuntimeException"/>
			<exception-mapping result="otherError" exception="java.lang.Exception"/>
		</global-exception-mappings>
		<action name="listenerConsole" class="com.al.commons.listener.web.ListenerConsoleAction"/>
		<action name="listenerConfig" class="com.al.commons.listener.web.ListenerConfigAction"/>
		<!-- add by xuwb 2013-7-16  数据监控 
		<action name="listenerDatamonitor" class="com.al.commons.listener.web.ListenerDatamonitorAction"
			 method="queryListenerData"/>
			 -->
	</package>
</struts>