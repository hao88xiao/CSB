<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<bean id="intfManager.sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:ibatis/intfManager/sqlMapConfig.xml" />
	</bean>
	
	<bean id="intfManager.sqlMapClientTemplate" class="org.springframework.orm.ibatis.SqlMapClientTemplate">
		<property name="sqlMapClient" ref="intfManager.sqlMapClient" />
	</bean>	
	<bean id="intfManager.intfDAO" class="com.linkage.bss.crm.intf.dao.IntfDAOImpl">
		<property name="sqlMapClientTemplate" ref="intfManager.sqlMapClientTemplate" />
		<property name="jdbc" ref="jdbc"/>
		<property name="commonSMO" ref="crmCommons.commonSMO" />
	</bean>
</beans>
